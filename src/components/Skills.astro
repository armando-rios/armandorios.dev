---
import { Icon } from "astro-icon/components";

interface SkillCategory {
  title: string;
  icon: string;
  gradient: string;
  skills: {
    name: string;
    icon?: string;
  }[];
}

const skillCategories: SkillCategory[] = [
  {
    title: "FRONTEND",
    icon: "browser",
    gradient: "from-cyan-500/20 to-blue-500/20",
    skills: [
      { name: "React", icon: "react" },
      { name: "TypeScript", icon: "typescript" },
      { name: "Tailwind", icon: "tailwind" },
      { name: "Astro", icon: "astro" },
      { name: "Performance", icon: "speed" },
    ],
  },
  {
    title: "BACKEND",
    icon: "server",
    gradient: "from-fuchsia-500/20 to-purple-500/20",
    skills: [
      { name: "Node.js", icon: "nodejs" },
      { name: "Express.js", icon: "express" },
      { name: "MongoDB", icon: "mongodb" },
      { name: "PostgreSQL", icon: "postgresql" },
      { name: "JWT, OAuth", icon: "key" },
      { name: "Docker", icon: "docker" },
    ],
  },
  {
    title: "TOOLING",
    icon: "tool",
    gradient: "from-emerald-500/20 to-teal-500/20",
    skills: [
      { name: "Git/GitHub", icon: "git" },
      { name: "Webpack/Vite", icon: "vite" },
      { name: "CI/CD", icon: "actions" },
      { name: "AWS", icon: "aws" },
      { name: "Linux", icon: "linux" },
      { name: "CLI", icon: "cli" },
    ],
  },
  {
    title: "ARCHITECTURE",
    icon: "building",
    gradient: "from-orange-500/20 to-pink-500/20",
    skills: [
      { name: "Clean Code", icon: "code" },
      { name: "Design Patterns", icon: "flow" },
      { name: "Modularization", icon: "folder" },
      { name: "Testing", icon: "test-tube" },
      { name: "Scalability", icon: "graph" },
    ],
  },
];
---

<section class="py-28 relative" id="skills">
  <div class="max-w-6xl mx-auto px-8">
    <!-- Section Header -->
    <div class="mb-16 relative">
      <h2 class="text-4xl font-bold mb-6 relative inline-block">
        <span
          class="bg-gradient-to-r from-fuchsia-500 to-cyan-500 text-transparent bg-clip-text"
        >
          SKILLS & EXPERTISE
        </span>
        <div
          class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-fuchsia-500/40 to-cyan-500/40"
        >
        </div>
      </h2>
      <p class="text-zinc-400 text-lg max-w-2xl mt-8">
        A comprehensive overview of my technical skills and areas of expertise,
        continuously evolving through hands-on project experience and learning.
      </p>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        skillCategories.map((category) => (
          <div class="relative group transform transition-all duration-300 hover:scale-105 hover:-translate-y-2">
            {/* Base Card */}
            <div class="relative z-10 border-2 border-zinc-800 p-8 bg-zinc-900/50 backdrop-blur-sm transition-all duration-300 group-hover:border-fuchsia-500/50">
              {/* Category Header */}
              <div class="flex items-center gap-4 mb-8">
                <div
                  class={`w-12 h-12 flex items-center justify-center border-2 border-zinc-800 rounded-sm bg-gradient-to-br ${category.gradient} transition-all duration-300 group-hover:border-fuchsia-500/50`}
                >
                  <Icon
                    name={category.icon}
                    class="w-6 h-6 text-white/70 transition-transform duration-300 group-hover:rotate-6"
                  />
                </div>
                <h3 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r ${category.gradient} opacity-80 transition-opacity duration-300 group-hover:opacity-100">
                  {category.title}
                </h3>
              </div>

              {/* Skills Grid */}
              <div class="grid grid-cols-2 gap-4">
                {category.skills.map((skill) => (
                  <div class="flex items-center gap-2">
                    {skill.icon && (
                      <Icon
                        name={skill.icon}
                        class="w-5 h-5 text-white/50 transition-colors duration-300 group-hover:text-white/90"
                      />
                    )}
                    <span class="text-white/70 transition-colors duration-300 group-hover:text-white">
                      {skill.name}
                    </span>
                  </div>
                ))}
              </div>

              {/* Decorative Corner Elements */}
              <div class="absolute top-0 right-0 w-24 h-24 border-t-2 border-r-2 border-zinc-800 -mt-2 -mr-2 transition-all duration-300 group-hover:border-fuchsia-500/50" />
              <div class="absolute bottom-0 left-0 w-24 h-24 border-b-2 border-l-2 border-zinc-800 -mb-2 -ml-2 transition-all duration-300 group-hover:border-fuchsia-500/50" />
            </div>

            {/* Hover Gradient Overlay */}
            <div class="absolute inset-0 bg-gradient-to-br from-fuchsia-500/10 to-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none blur-xl" />
          </div>
        ))
      }
    </div>

    {/* Extra Skills */}
    <div class="mt-16 relative group">
      <div
        class="border-2 border-zinc-800/80 p-8 relative z-10 bg-zinc-900/50 backdrop-blur-sm"
      >
        <h3 class="text-xl font-bold mb-4 text-white/90">
          OTHER TOOLS & TECHNOLOGIES
        </h3>
        <div class="flex flex-wrap gap-4">
          {
            [
              "ESLint",
              "Prettier",
              "Bash",
              "PowerShell",
              "Lua",
              "Rust",
              "C#",
              "Redis",
              "Jest",
              "Firebase",
              "GraphQL",
              "Docker",
              "Vercel",
              "Netlify",
              "Railway",
              "Cloudflare",
              "NGINX",
              "Rspack",
            ].map((tool) => (
              <span class="px-4 py-2 border border-zinc-800/80 text-sm  text-white/60 hover:text-white hover:border-white/20 transition-all duration-300 bg-white/5 hover:bg-white/10">
                {tool}
              </span>
            ))
          }
        </div>
      </div>

      {/* Background Gradient */}
      <div
        class="absolute inset-0 bg-gradient-to-r from-fuchsia-500/10 to-cyan-500/10 opacity-0 group-hover:opacity-10 transition-all duration-300 blur-xl"
      >
      </div>
    </div>
  </div>
</section>
